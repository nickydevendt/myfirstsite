<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content=" width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" href="./home.css">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
        <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
        <title>Portfolio</title>
    </head>
    <body>

        {% block header %}
            <div class="topnav">
                <ul>
                    <li><a class="active" href="/">Home</a></li>
                    <li><a href="/workprojects">Work & projects</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/resume">Resume</a></li>
                    <li><a href="/contact">Contact</a></li>
                    {% if session.login.admin == 1 %}
                        <li><a href="/adminpanel">Admin panel</a></li>
                        <li><a>Log out</a></li>
                    {% elseif session.login.admin == 0 %}
                        <li><a href="/userpanel">user panel</a></li>
                        <li><a href="/logout">Log out</a></a>
                    {% else %}
                        <li><a href="/reglog">Inloggen & registeren</a></li>
                    {% endif %}
                </ul>
            </div>
        {% endblock %}

        {% block name %}
        {% endblock %}

        {% block main %}
        {% endblock %}

        {% block text %}
        {% endblock %}

        {% block promotion %}
        {% endblock %}

        {% block recentprojects %}
        {% endblock %}

        {% block footer %}
            <footer>
                <div class="footer">
                  <div class="footerlayout">
                    <div class="footercontact" id="creative">
                        <h3>CREATIVE</h3>
                        <h4>FREEBIES</h4>
                        <p>pellentesque in ipsum id orci porta dapibus. Praesent sapien massa convallis</p>
                    </div>
                    <div class="footercontact" id="mail">
                          <i class="far fa-envelope" id="svg"></i>
                          <h4>Mail</h4>
                          <p>info@yourmail.com</p>
                    </div>
                    <div class="footercontact" id="call">
                          <i class="fas fa-phone-volume" id="svg"></i>
                          <h4>Call me</h4>
                          <p>+0255 123 456 789</p>
                    </div>
                    <div class="footercontact" id="findus">
                          <i class="fas fa-globe" id="svg"></i>
                          <h4>Find me</h4>
                          <p>My adress,city</p>
                    </div>
                  </div>
                </div>
            </footer>
        {% endblock %}
    </body>
</html>
